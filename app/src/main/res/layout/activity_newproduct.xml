<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".newproduct"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/new_code"
            android:layout_marginTop="30dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />
        <Button
            android:id="@+id/new_capture_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="capturar codigo"/>
        <ImageView
            android:id="@+id/new_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            />
        <Button
            android:id="@+id/new_capture_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="capturar imagen del producto"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo"/>
        <EditText
            android:id="@+id/new_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Codigo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo"/>
        <EditText
            android:id="@+id/new_costo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"/>
        <EditText
            android:id="@+id/new_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad"/>
        <EditText
            android:id="@+id/new_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cantidad"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo total"/>
        <EditText
            android:id="@+id/new_costo_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Costo total"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total"/>
        <EditText
            android:id="@+id/new_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="total"/>
        <Button
            android:id="@+id/new_send"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="enviar"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
